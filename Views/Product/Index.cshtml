@model IEnumerable<KRK_Class7_Task1.Models.Views.ProductListViewModel>

<!-- Tutaj mamy drugi przykład wyświetlenia danych, które pochodzą z metody GetAll() serwisu ProductService -->


<table class="table  table-striped">
    <thead class="table-secondary">
        <tr>
            <th>@Html.DisplayNameFor(x => x.ProductID)</th>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.ProductID)</td>
                <td>@Html.DisplayFor(x => item.Name)</td>
                <td>@Html.DisplayFor(x => item.Price)</td>
            </tr>
        }
    </tbody>
</table>