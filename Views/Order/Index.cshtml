@model IEnumerable<KRK_Class7_Task1.Models.Order>


<table class="table  table-striped">
    <thead class="table-secondary">
        <tr>
            <th>@Html.DisplayNameFor(x => x.Client.Name)</th>
            <th>@Html.DisplayNameFor(x => x.Date)</th>
            <th>@Html.DisplayNameFor(x => x.Price)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.Client.Name)</td>
                <td>@Html.DisplayFor(x => item.Date)</td>
                <td>@Html.DisplayFor(x => item.Price)</td>
            </tr>
        }
    </tbody>
    

</table>